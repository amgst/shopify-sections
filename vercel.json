{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/sections/:id",
      "destination": "/api/sections/[id].ts"
    },
    {
      "source": "/api/sections",
      "destination": "/api/sections/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
